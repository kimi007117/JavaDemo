<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:orientation="vertical">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom sheet" />

        <EditText
            android:id="@+id/et_keyword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="true"
            android:hint="请输入您的关键词"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:textColor="#111111"
            android:textColorHint="#9FA4B0"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/bg_tab_selected_shape"
            android:text="按钮" />

    </LinearLayout>

    <com.noe.rxjava.widget.TestBottomSheetLayout
        android:id="@+id/view_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<!--    <include layout="@layout/layout_bottom_sheet_view"/>-->

</RelativeLayout>